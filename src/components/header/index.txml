<view class="header flex items-center justify-between w-full">
  <block tiki:if="{{isShowBtn}}">
    <button class="header-btn border-none bg-transparent flex justify-center items-center" onTap="onTap">
      <icon type="arrow_left" size="40" color="#fff" />
    </button>
  </block>
  <view class="header-img-container flex justify-center items-center">
    <image class="header-img" style={{isShowBtn ? "transform: translateX(-70%)" : "transform: translateX(-10%)" }} src="/assets/icons/logo.svg" />
  </view>
</view>