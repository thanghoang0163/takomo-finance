.photo-img-container {
  box-shadow: -2px -2px 10px rgba(153, 153, 153, 0.75),
    2px 2px 5px rgba(0, 0, 0, 0.25);
  border-radius: 8px;
  height: 30vh;
  overflow: hidden;
}

.photo-img-container image {
  width: 100%;
  height: 100%;
}

.id-card-img .input-section {
  background: transparent;
  box-shadow: none;
  border-radius: 0;
  padding: 0;
}

.photo-content > .input-section {
  margin-bottom: 20px;
}
