.address .input-section {
  padding-top: 10px;
}

.address-title {
  width: 100%;
  color: #27272a;
}

.address
  view:first-of-type
  .tu-label
  .tu-textfield-inline
  .tu-icon.tu-textfield-error-icon {
  display: none;
}

.address .input-section view:nth-of-type(5) .tu-label .tu-label-inline view {
  position: relative;
}

.address
  .input-section
  view:nth-of-type(5)
  .tu-label
  .tu-label-inline
  view::after {
  content: "*";
  color: red;
  position: absolute;
  top: 0;
  left: 50px;
}

