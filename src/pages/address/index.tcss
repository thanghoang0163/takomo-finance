.select-address {
  position: relative;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 10px 0;
  padding: 10px 0;
}

.select-address-content {
  display: flex;
  justify-content: center;
  align-items: center;
  padding-left: 20px;
}

.select-address image {
  width: 20px;
  height: 20px;
  margin-right: 10px;
}

.select-address button {
  position: absolute;
  top: 0;
  right: 0;
  width: 100%;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  background-color: transparent;
  border: none;
  border-radius: 20px;
}

.select-address button:hover {
  background-color: transparent;
}

.separator {
  position: relative;
  text-align: center;
  width: 100%;
  font-size: 12px;
  margin-bottom: 10px;
}

.separator::after {
  content: "";
  position: absolute;
  top: 50%;
  right: 0;
  height: 1px;
  width: 42%;
  background-color: #ebebf0;
}

.separator::before {
  content: "";
  position: absolute;
  top: 50%;
  left: 0;
  height: 1px;
  width: 42%;
  background-color: #ebebf0;
}
