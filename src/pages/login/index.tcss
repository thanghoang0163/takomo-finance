.login {
  background: linear-gradient(
    to bottom,
    rgba(114, 9, 183, 1) 45%,
    rgba(255, 255, 255, 1) 50%
  );
}

.login-img {
  height: 200px;
}

.modal {
  background: var(--white-color);
  box-shadow: -2px -2px 10px rgba(153, 153, 153, 0.75),
    2px 2px 5px rgba(0, 0, 0, 0.25);
  border-radius: 20px;
  padding: 10px 0 0;
}
